{
  "name": "turboui-i18n",
  "displayName": "Turboui i18n",
  "description": "基于 @turboui/turbo-ui-sdk 的国际化扩展",
  "version": "0.0.8",
  "author": "https://github.com/showlotus",
  "publisher": "showlotus",
  "license": "MIT",
  "icon": "resources/Turboui-i18n.png",
  "engines": {
    "vscode": "^1.57.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/showlotus/Turboui-i18n"
  },
  "homepage": "https://github.com/showlotus/Turboui-i18n#readme",
  "categories": [
    "Other",
    "Snippets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "Turboui-i18n.openTokenRange",
        "title": "Open Token Range"
      }
    ],
    "configuration": [
      {
        "title": "turboui-i18n",
        "properties": {
          "turboui-i18n.enable": {
            "type": "boolean",
            "default": true,
            "description": "启用或禁用插件"
          },
          "turboui-i18n.configDirName": {
            "type": "string",
            "default": "i18n",
            "description": "存放 JSON 配置的文件夹名"
          },
          "turboui-i18n.includes": {
            "type": "array",
            "default": [
              ".js",
              ".ts",
              ".vue"
            ],
            "description": "生效的文件类型"
          },
          "turboui-i18n.exclude": {
            "type": "array",
            "default": [],
            "description": "忽略的文件夹或文件"
          }
        }
      }
    ]
  },
  "scripts": {
    "package": "vsce package",
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "1.57.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "@vscode/vsce": "^2.20.0",
    "conventional-changelog-cli": "^3.0.0",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "fast-glob": "^3.3.1",
    "json-to-ast": "^2.1.0"
  }
}
