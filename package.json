{
  "name": "turbo-i18n",
  "displayName": "Turbo i18n",
  "description": "基于 @turboui/turbo-ui-sdk 的国际化扩展",
  "version": "0.0.1",
  "author": "https://github.com/showlotus",
  "license": "MIT",
  "icon": "resources/LeetCode.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/showlotus/Turbo-i18n"
  },
  "homepage": "https://github.com/showlotus/Turbo-i18n#readme",
  "categories": [
    "Other",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "turbo-i18n",
        "properties": {
          "turbo-i18n.dirName": {
            "type": "string",
            "default": "i18n",
            "description": "默认处理的文件夹名"
          },
          "turbo-i18n.includes": {
            "type": "array",
            "default": [
              ".js",
              ".ts"
            ],
            "description": "对哪些文件类型生效"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
